<%= form_with(url: blogtext_comment_replies_path, model: @reply) do |form| %>
  <% if @reply.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
        <% @reply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :username, value: current_user.name %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.hidden_field :comment_id, value: @comment_id %>
  </div>

  <div>
    <%= form.label "reply" %>
    <%= form.text_field :reply %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
